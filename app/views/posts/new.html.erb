<%= javascript_include_tag Ckeditor.cdn_url %>
<div class="container">
  <%= form_for(@post) do |f| %>
  
    <% @post.errors.full_messages.each do |message| %>
      <li class="alert alert-warning"><%= message %></li>
    <% end %>
    
    <%= flash[:notice] if flash[:notice] %>
    
    <div class="form-group m-4">
      <%= f.text_field :title, class: "form-control form-control-sm", id: "title", placeholder: "タイトルを入力" %>
    </div>
    
    <div class="form-group m-4">
      <%= f.cktext_area :description, id: "editor", class:"form-control", placeholder: "本文を入力", style: "width: 690px;" %>
    </div>
  
    <%= f.submit class:"btn btn-primary ml-4" %>
    
  <% end %>
</div>
