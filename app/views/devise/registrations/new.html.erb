<div class="container">
<h2 class="display-3 text-center">サインアップ</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field text-center form-group m-4">
    <%= f.label "ユーザー名" %><br />
    <%= f.text_field :name, autofocus: true, class: "form-control-lg", placeholder:"ユーザ名" %>
  </div>

  <div class="field text-center m-4">
    <%= f.label "メールアドレス" %><br />
    <%= f.email_field :email, autocomplete: "email", class: "form-control-lg", placeholder:"メールアドレス" %>
  </div>

  <div class="field text-center m-4">
    <%= f.label "パスワード" %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> 文字以上)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control-lg", placeholder:"パスワード" %>
  </div>

  <div class="field text-center m-4">
    <%= f.label "パスワードを再入力" %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control-lg", placeholder: "パスワード" %>
  </div>

  <div class="actions text-center m-4">
    <%= f.submit "新規登録", class: "btn btn-outline-dark btn-lg center-block" %>
  </div>
<% end %>
