<div class="container p-auto">
  <%= form_with model: @contact do |form| %>
    <div class="form-group col-12 my-5 text-center">
      <%= form.label "お名前", class:"font-weight-bold", style: "display:block" %>
      <%= form.text_field :name, id:"name", class:"form-control-lg" %>
    </div>
    <div class="form-group col-12 text-center">
      <%= form.label "お問い合わせ内容", class:"font-weight-bold", style: "display:block" %>
      <%= form.text_area :message, id: "message", class:"form-control", style:"height: 500px" %>
    </div>
    <div class="form-group text-center">
      <%= form.submit "送信", class: "btn btn-light mt-2" %>
    </div>
  <% end %>
</div>